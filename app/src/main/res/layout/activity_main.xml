<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="mainViewModel"
                type="com.tistory.jeongs0222.weatherapplication.ui.viewmodel.MainViewModel"/>

    </data>

    <ScrollView
            android:id="@+id/null3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@color/colorWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/main_location_imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:onClick="@{() -> mainViewModel.locationClickEvent()}"
                    android:src="@drawable/ic_location_on_black_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <include
                    android:id="@+id/main_present_layout"
                    layout="@layout/main_present_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:viewModel="@{mainViewModel}"
                    app:layout_constraintTop_toBottomOf="@+id/main_location_imageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:id="@+id/null1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="미세먼지"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:fontFamily="@font/goyang"
                    android:padding="15dp"
                    android:background="@color/lightGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/main_present_layout"/>

            <!--<include
                    android:id="@+id/main_recycler_layout"
                    layout="@layout/main_finedust_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:viewModel="@{mainViewModel}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null1"/>-->

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/finedust_recyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:adapter="@{mainViewModel.finedustAdapter}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null1">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                    android:id="@+id/null2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="단기예보"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:fontFamily="@font/goyang"
                    android:padding="15dp"
                    android:background="@color/lightGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/finedust_recyclerView"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/shortForecast_recyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:adapter="@{mainViewModel.shortForecastAdapter}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/null2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>